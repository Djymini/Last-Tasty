generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Party {
  session_number String         @id
  location       String
  progression    Progression?
  inventory      Inventory[]

  @@map("party")
}

model Item {
  id_item    Int       @id @default(autoincrement())
  name       String    @unique
  description String
  image_url  String    @unique
  inventory  Inventory[]

  @@map("item")
}

model Progression {
  id_progression         Int     @id @default(autoincrement())
  introduction_is_viewed Boolean
  postit_is_viewed       Boolean
  diary_is_viewed        Boolean
  library_is_open        Boolean
  gordon_is_viewed       Boolean
  session_number         String     @unique
  party                  Party   @relation(fields: [session_number], references: [session_number])

  @@map("progression")
}

model Inventory {
  session_number String
  id_item        Int
  party          Party @relation(fields: [session_number], references: [session_number])
  item           Item  @relation(fields: [id_item], references: [id_item])

  @@id([session_number, id_item])
  @@map("inventory")
}